# Tech Trend Sentiment Analyst - Environment Variables
# Copy this file to .env and fill in your actual API keys

# ============================================
# AI/LLM Configuration
# ============================================
# Google Gemini API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Reddit API Configuration
# ============================================
# Create a Reddit app at: https://www.reddit.com/prefs/apps
# Select "script" as the app type
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=TrendSense/1.0 (by /u/your_username)

# ============================================
# News API Configuration
# ============================================
# Get your API key from: https://newsapi.org/register
NEWS_API_KEY=your_news_api_key_here

# ============================================
# Database Configuration
# ============================================
# Path to SQLite database file
# Default: data/sentiments.db
DATABASE_PATH=data/sentiments.db

# ============================================
# Flask Server Configuration
# ============================================
# Flask server host (default: 127.0.0.1)
FLASK_HOST=127.0.0.1

# Flask server port (default: 5000)
FLASK_PORT=5000

# Flask debug mode (true/false, default: false)
FLASK_DEBUG=false

# ============================================
# ETL Configuration
# ============================================
# Comma-separated list of keywords to track
# Default: Next.js,TypeScript,AI,React,Python
KEYWORDS=Next.js,TypeScript,AI,React,Python,JavaScript,Node.js

# Number of Reddit posts to fetch per keyword (default: 10)
REDDIT_LIMIT=10

# Number of news articles to fetch per keyword (default: 10)
NEWS_LIMIT=10

# ============================================
# Frontend Configuration (Optional)
# ============================================
# Next.js public API URL (default: http://localhost:5000)
# Set this if your Flask API is running on a different host/port
NEXT_PUBLIC_API_URL=http://localhost:5000
